        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog">

    <changeSet author="ezohno" id="BOOKS-1-createTable">
        <createTable tableName="POST">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKeyName="pk_PERSON_PROFILE" primaryKey="true" nullable="false"/>
