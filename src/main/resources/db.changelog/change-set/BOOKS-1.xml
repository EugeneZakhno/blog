            <column name="TITLE" type="varchar(50)"/>
            <column name="ANONS" type="varchar(50)"/>
            <column name="FULLTEXT" type="varchar(2900)"/>
            <column name="VIEWS" type="BIGINT"/>
        </createTable>
    </changeSet>
</databaseChangeLog>